<!-- Dashboard Layout - Complete dashboard interface using components -->

<!DOCTYPE html>
<html class="h-full bg-white">
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Dashboard" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= render "shared/clarity" %>
  <%= render "shared/google_analytics" %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css", rel: "stylesheet" %>
  <%= javascript_importmap_tags %>
</head>

<body class="h-full">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded shadow-lg z-[60] max-w-md" role="alert" data-controller="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <% if alert %>
    <div class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded shadow-lg z-[60] max-w-md" role="alert" data-controller="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  <% end %>

  <div data-controller="sidebar">
    <!-- Sidebar Component (includes mobile off-canvas and desktop static sidebar) -->
    <%= render 'shared/sidebar' %>

    <!-- Main content area with sidebar offset -->
    <div class="lg:pl-72">
      <!-- Top Navigation Component -->
      <%= render 'shared/top_navigation' %>

      <%# Free Plan Upgrade Banner %>
      <% if user_signed_in? && current_user.business&.free? %>
        <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-indigo-600 border-b border-indigo-700">
          <div class="px-4 py-3 sm:px-6 lg:px-8">
            <div class="flex flex-wrap items-center justify-between gap-3">
              <div class="flex items-center gap-3">
                <p class="text-sm font-medium text-white">
                  <span class="font-semibold">Free Plan:</span>
                  <span class="hidden sm:inline"> Only your latest 200 reviews are analyzed. Upgrade to Pro for up to 3,000 reviews + weekly reports.</span>
                  <span class="sm:hidden"> Limited to 200 reviews.</span>
                </p>
              </div>
              <div class="flex-shrink-0">
                <%= link_to @payment_url, class: "inline-flex items-center gap-1.5 rounded-full bg-white px-4 py-1.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white transition-colors" do %>
                  Upgrade to Pro
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Main Content Component -->
      <%= render 'shared/main_content' %>
    </div>
  </div>
</body>
</html> 
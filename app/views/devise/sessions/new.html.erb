<!-- Sign In Page -->
<div class="min-h-screen relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 mesh-gradient"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-400/20 rounded-full blur-3xl animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-violet-400/20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
  
  <div class="relative z-10 grid lg:grid-cols-2 min-h-screen">
    <!-- Left Side - Branding -->
    <div class="hidden lg:flex items-center justify-end pr-16 xl:pr-24">
      <div class="w-full max-w-md space-y-8">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-600 to-violet-500 flex items-center justify-center shadow-lg shadow-indigo-500/30">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <%= link_to root_path, class: "font-display font-bold text-3xl text-slate-900" do %>
            Tablr
          <% end %>
        </div>
        
        <div class="space-y-4">
          <h1 class="font-display text-4xl font-bold text-slate-900 leading-tight">
            Welcome Back to
            <span class="gradient-text">Tablr</span>
          </h1>
          <p class="text-lg text-slate-600 leading-relaxed">
            Sign in to access your review analytics dashboard and stay on top of what your customers are saying.
          </p>
        </div>
        
        <!-- Feature highlights -->
        <div class="space-y-4 pt-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">View your analytics dashboard</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-rose-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">Track complaints and issues</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-violet-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">Review customer suggestions</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Right Side - Form -->
    <div class="flex items-center justify-center lg:justify-start lg:pl-16 xl:pl-24 p-6 lg:py-12">
      <div class="w-full max-w-md">
        <!-- Mobile Logo -->
        <div class="lg:hidden flex items-center justify-center gap-2 mb-8">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-600 to-violet-500 flex items-center justify-center shadow-lg shadow-indigo-500/20">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <%= link_to root_path, class: "font-display font-bold text-2xl text-slate-900" do %>
            Tablr
          <% end %>
        </div>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
            <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm"><%= notice %></span>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="bg-rose-50 border border-rose-200 text-rose-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
            <svg class="w-5 h-5 text-rose-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm"><%= alert %></span>
          </div>
        <% end %>

        <div class="glass-card rounded-2xl p-8 shadow-xl shadow-slate-900/5 border border-white/50">
          <div class="text-center mb-8">
            <h2 class="font-display text-2xl font-bold text-slate-900 mb-2">Sign in to your account</h2>
            <p class="text-slate-600 text-sm">Access your review analytics dashboard</p>
          </div>

          <!-- Google Sign In Button -->
          <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 py-3.5 px-6 bg-white border border-slate-200 rounded-xl shadow-sm text-sm font-semibold text-slate-700 hover:bg-slate-50 hover:border-slate-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continue with Google</span>
          <% end %>

          <!-- Divider -->
          <div class="relative my-6">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-slate-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-3 bg-white text-slate-500">or continue with email</span>
            </div>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "space-y-5" }) do |f| %>
            <div>
              <%= f.label :email, "Email address", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "off", required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "Enter your email" %>
            </div>

            <div>
              <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
              <%= f.password_field :password, autocomplete: "off", required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "Enter your password" %>
            </div>

            <div class="flex items-center justify-between">
              <% if devise_mapping.rememberable? %>
                <div class="flex items-center gap-2">
                  <%= f.check_box :remember_me, class: "w-4 h-4 text-indigo-600 border-slate-300 rounded focus:ring-indigo-500 cursor-pointer" %>
                  <%= f.label :remember_me, "Remember me", class: "text-sm text-slate-600 cursor-pointer" %>
                </div>
              <% end %>
              
              <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 transition-colors" %>
              <% end %>
            </div>

            <div class="pt-2">
              <%= f.submit "Sign in", class: "w-full py-3.5 px-6 text-white font-semibold bg-gradient-to-r from-indigo-600 to-violet-500 rounded-xl hover:shadow-lg hover:shadow-indigo-500/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 cursor-pointer" %>
            </div>
          <% end %>

          <p class="mt-6 text-center text-sm text-slate-600">
            Don't have an account?
            <%= link_to "Create account", new_user_registration_path, class: "font-semibold text-indigo-600 hover:text-indigo-500 transition-colors" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Profile Dropdown Component - User avatar and dropdown menu -->

<div class="relative" data-controller="profile-dropdown">
  <!-- Profile button -->
  <button type="button" class="relative flex items-center" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-profile-dropdown-target="button" data-action="click->profile-dropdown#toggle">
    <span class="absolute -inset-1.5"></span>
    <span class="sr-only">Open user menu</span>
    <div class="size-8 rounded-full bg-indigo-500 flex items-center justify-center">
      <span class="text-sm font-medium text-white"><%= current_user.initials %></span>
    </div>
    <span class="hidden lg:flex lg:items-center">
      <span class="ml-4 text-sm/6 font-semibold text-gray-900" aria-hidden="true"><%= current_user.full_name %></span>
      <svg class="ml-2 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
        <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
      </svg>
    </span>
  </button>

  <!-- Dropdown menu -->
  <div class="absolute right-0 z-10 mt-2.5 w-56 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-gray-900/5 focus:outline-hidden hidden" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-profile-dropdown-target="menu">
    <!-- User info -->
    <div class="px-4 py-3 border-b border-gray-100">
      <p class="text-sm font-medium text-gray-900"><%= current_user.full_name %></p>
      <p class="text-xs text-gray-500"><%= current_user.email %></p>
    </div>

    <!-- Profile link -->
    <%= link_to edit_user_registration_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors duration-150", role: "menuitem", tabindex: "-1" do %>
      <svg class="mr-3 size-5 text-gray-400 group-hover:text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      Profile
    <% end %>


    <!-- Support link -->
    <%= link_to support_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors duration-150", role: "menuitem", tabindex: "-1" do %>
      <svg class="mr-3 size-5 text-gray-400 group-hover:text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
      </svg>
      Support
    <% end %>
  
    <!-- Divider -->
    <div class="border-t border-gray-100 my-1"></div>

    <!-- Sign out link -->
    <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "group flex items-center px-4 py-3 text-sm text-red-700 hover:bg-red-50 hover:text-red-900 transition-colors duration-150", role: "menuitem", tabindex: "-1" do %>
      <svg class="mr-3 size-5 text-red-400 group-hover:text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
      </svg>
      Sign out
    <% end %>
  </div>
</div> 
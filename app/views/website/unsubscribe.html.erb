<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <% if @unsubscribed %>
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Successfully Unsubscribed
          </h2>
          <p class="mt-2 text-center text-sm text-gray-600">
            You have been successfully unsubscribed from our email list.
          </p>
          <div class="mt-6">
            <a href="<%= root_path %>" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Return to Homepage
            </a>
          </div>
        <% else %>
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100">
            <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h2 class="mt-6 text-center text-2xl font-extrabold text-gray-900">
            We're sorry to see you go
          </h2>
          <p class="mt-2 text-center text-sm text-gray-600">
            Please let us know why you're unsubscribing so we can improve.
          </p>

          <%= form_with url: process_unsubscribe_path, method: :post, local: true, class: "mt-6 text-left" do |f| %>
            <%= hidden_field_tag :token, @token %>
            <%= hidden_field_tag :email, @email %>

            <div class="space-y-3">
              <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                <input type="radio" name="reason" value="not_relevant" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" required>
                <span class="ml-3 text-sm text-gray-700">Not relevant to my business</span>
              </label>

              <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                <input type="radio" name="reason" value="another_solution" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                <span class="ml-3 text-sm text-gray-700">I already use another solution</span>
              </label>

              <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                <input type="radio" name="reason" value="timing_not_right" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                <span class="ml-3 text-sm text-gray-700">Timing isn't right</span>
              </label>

              <label class="flex items-start p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                <input type="radio" name="reason" value="other" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 mt-0.5" id="reason_other">
                <div class="ml-3 flex-1">
                  <span class="text-sm text-gray-700">Other (please specify)</span>
                  <input type="text" name="other_reason" id="other_reason_input" placeholder="Please tell us more..." class="mt-2 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 disabled:bg-gray-100 disabled:text-gray-400" disabled>
                </div>
              </label>
            </div>

            <div class="mt-6">
              <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Unsubscribe
              </button>
            </div>
          <% end %>

          <div class="mt-4">
            <a href="<%= root_path %>" class="text-sm text-gray-500 hover:text-gray-700">
              ‚Üê Changed your mind? Go back to homepage
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const radioButtons = document.querySelectorAll('input[name="reason"]');
    const otherInput = document.getElementById('other_reason_input');
    const otherRadio = document.getElementById('reason_other');

    radioButtons.forEach(function(radio) {
      radio.addEventListener('change', function() {
        if (otherRadio.checked) {
          otherInput.disabled = false;
          otherInput.focus();
        } else {
          otherInput.disabled = true;
          otherInput.value = '';
        }
      });
    });
  });
</script>

<div class="bg-white">
  <div class="px-4 py-5 sm:px-6">
    <!-- Header with back button -->
    <div class="mb-6">
      <%= link_to reviews_path, class: "inline-flex items-center gap-x-2 text-sm font-medium text-gray-600 hover:text-gray-900" do %>
        <svg class="size-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
        </svg>
        Back to Reviews
      <% end %>
    </div>

    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div class="flex-auto">
          <h1 class="text-2xl font-bold tracking-tight text-gray-900">Review Details</h1>
          <p class="mt-1 text-sm text-gray-500">Complete information about this review</p>
        </div>
        <% if @review.review_url.present? %>
          <%= link_to @review.review_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center gap-x-2 rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            <svg class="size-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
              <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
            </svg>
            View on Google Maps
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Tabs Container -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200" data-controller="tabs" data-tabs-default-tab-value="review-detail">
            <!-- Tab Navigation -->
      <div class="border-b border-gray-200">
        <nav class="flex px-6 py-4 space-x-8" aria-label="Tabs">
          <button data-action="click->tabs#switchTab" 
                  data-tabs-target="tab" 
                  data-tab-name="review-detail"
                  class="flex items-center gap-x-2 pb-2 text-sm font-medium text-gray-500 hover:text-gray-700 border-b-2 border-transparent focus:outline-none focus:text-indigo-600 transition-all duration-200">
            <svg class="size-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
            </svg>
            Review Detail
          </button>
          
          <button data-action="click->tabs#switchTab" 
                  data-tabs-target="tab" 
                  data-tab-name="suggestions"
                  class="flex items-center gap-x-2 pb-2 text-sm font-medium text-gray-500 hover:text-gray-700 border-b-2 border-transparent focus:outline-none focus:text-indigo-600 transition-all duration-200">
            <svg class="size-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L8.107 10.5a.75.75 0 00-1.214.882l1.5 2.5a.75.75 0 001.214 0l4-5.5z" clip-rule="evenodd" />
            </svg>
            Suggestions
            <% if @review.suggestions.any? %>
              <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">
                <%= @review.suggestions.count %>
              </span>
            <% end %>
          </button>
          
          <button data-action="click->tabs#switchTab" 
                  data-tabs-target="tab" 
                  data-tab-name="complains"
                  class="flex items-center gap-x-2 pb-2 text-sm font-medium text-gray-500 hover:text-gray-700 border-b-2 border-transparent focus:outline-none focus:text-indigo-600 transition-all duration-200">
            <svg class="size-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM10 8.5a.75.75 0 00-1.5 0v3.5a.75.75 0 001.5 0V10a.75.75 0 00-.75-.75 1.5 1.5 0 001.5-1.5z" clip-rule="evenodd" />
            </svg>
            Complains
            <% if @review.complains.any? %>
              <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">
                <%= @review.complains.count %>
              </span>
            <% end %>
          </button>
        </nav>
      </div>

      <!-- Tab Content -->
      <div class="min-h-96">
        <!-- Review Detail Tab -->
        <div data-tabs-target="content" 
             data-tab-name="review-detail" 
             class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            <!-- Reviewer Information -->
            <div class="space-y-4">
              <div class="flex items-center gap-x-4">
                <img class="size-16 flex-none rounded-full bg-gray-50"
                     src="<%= @review.image_url %>"
                     alt="<%= @review.name %>'s profile picture"
                     width="64"
                     height="64"
                     loading="lazy"
                     onerror="this.onerror=null;this.src='/images/default-profile.png';" />
                <div class="min-w-0">
                  <h3 class="text-lg font-semibold leading-6 text-gray-900"><%= @review.name %></h3>
                  <p class="text-sm text-gray-500">
                    Published on <%= @review.published_at&.strftime('%B %d, %Y') || 'N/A' %>
                  </p>
                  <% if @review.likes_count.present? && @review.likes_count > 0 %>
                    <p class="text-sm text-gray-500 flex items-center gap-x-1 mt-1">
                      <svg class="size-4 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                        <path d="m9.653 16.915-.005-.003-.019-.01a20.759 20.759 0 0 1-1.162-.682 22.045 22.045 0 0 1-2.582-1.9C4.045 12.733 2 10.352 2 7.5a4.5 4.5 0 0 1 8-2.828A4.5 4.5 0 0 1 18 7.5c0 2.852-2.045 5.233-3.885 6.82a22.049 22.049 0 0 1-3.744 2.582l-.019.01-.005.003h-.002a.739.739 0 0 1-.69.001l-.002-.001Z" />
                      </svg>
                      <%= pluralize(@review.likes_count, 'like') %>
                    </p>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Ratings Grid -->
            <div class="space-y-4">
              <h4 class="text-sm font-medium text-gray-900">Ratings</h4>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Overall</label>
                  <div class="mt-1">
                    <%= render 'shared/star_rating', rating: @review.stars, show_number: true %>
                  </div>
                </div>
                <% if @review.food_rating.present? %>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Food</label>
                    <div class="mt-1">
                      <%= render 'shared/star_rating', rating: @review.food_rating, show_number: true %>
                    </div>
                  </div>
                <% end %>
                <% if @review.service_rating.present? %>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Service</label>
                    <div class="mt-1">
                      <%= render 'shared/star_rating', rating: @review.service_rating, show_number: true %>
                    </div>
                  </div>
                <% end %>
                <% if @review.atmosphere_rating.present? %>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Atmosphere</label>
                    <div class="mt-1">
                      <%= render 'shared/star_rating', rating: @review.atmosphere_rating, show_number: true %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Review Text -->
          <div class="mt-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Review</label>
            <div class="prose prose-sm max-w-none">
              <p class="text-gray-700 leading-relaxed"><%= @review.text %></p>
            </div>
          </div>

          <!-- Review Context -->
          <% if @review.review_context.present? && @review.review_context.any? %>
            <div class="mt-6">
              <label class="block text-sm font-medium text-gray-900 mb-2">Review Context</label>
              <div class="bg-gray-50 rounded-lg p-4">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-2 sm:grid-cols-2 lg:grid-cols-3">
                  <% @review.review_context.each do |key, value| %>
                    <div>
                      <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide"><%= key %></dt>
                      <dd class="mt-1 text-sm text-gray-900"><%= value %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Suggestions Tab -->
        <div data-tabs-target="content" 
             data-tab-name="suggestions" 
             class="hidden">
          <% if @review.suggestions.any? %>
            <div class="px-4 py-5 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <h2 class="text-lg font-medium text-gray-900">Suggestions</h2>
                  <p class="mt-1 text-sm text-gray-500">
                    <%= pluralize(@review.suggestions.count, 'suggestion') %> extracted from this review
                  </p>
                </div>
                <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                  <%= @review.suggestions.count %>
                </span>
              </div>
            </div>
            <div class="overflow-hidden">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Suggestion</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @review.suggestions.each do |suggestion| %>
                    <tr class="hover:bg-gray-50">
                      <td class="py-4 pl-4 pr-3 sm:pl-6">
                        <p class="text-sm text-gray-900"><%= suggestion.text %></p>
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                        <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                          <%= suggestion.category.name %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="px-4 py-12 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014.846 21H9.154a3.374 3.374 0 00-2.548-1.146l-.548-.547z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No suggestions found</h3>
              <p class="mt-1 text-sm text-gray-500">No suggestions were extracted from this review.</p>
            </div>
          <% end %>
        </div>

        <!-- Complains Tab -->
        <div data-tabs-target="content" 
             data-tab-name="complains" 
             class="hidden">
          <% if @review.complains.any? %>
            <div class="px-4 py-5 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <h2 class="text-lg font-medium text-gray-900">Complains</h2>
                  <p class="mt-1 text-sm text-gray-500">
                    <%= pluralize(@review.complains.count, 'complain') %> extracted from this review
                  </p>
                </div>
                <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
                  <%= @review.complains.count %>
                </span>
              </div>
            </div>
            <div class="overflow-hidden">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Complain</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @review.complains.each do |complain| %>
                    <tr class="hover:bg-gray-50">
                      <td class="py-4 pl-4 pr-3 sm:pl-6">
                        <p class="text-sm text-gray-900"><%= complain.text %></p>
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                        <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-700/10">
                          <%= complain.category.name %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="px-4 py-12 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No complains found</h3>
              <p class="mt-1 text-sm text-gray-500">No complains were extracted from this review.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

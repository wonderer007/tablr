<%# Dashboard View - Uses the dashboard layout with sample content %>

<% content_for :title, "Dashboard - Tablr" %>

<!-- Sample Dashboard Content -->
<div class="space-y-6">
  <!-- Page Header -->
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
    <p class="mt-2 text-sm text-gray-700">Welcome to your dashboard. Here's an overview of your data.</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Stat Card 1 -->
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Total Places</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">2,847</dd>
    </div>

    <!-- Stat Card 2 -->
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Total Reviews</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">12,345</dd>
    </div>

    <!-- Stat Card 3 -->
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Categories</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">24</dd>
    </div>

    <!-- Stat Card 4 -->
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Keywords</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">156</dd>
    </div>
  </div>


<% content_for :title, "Settings - Tablr" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-gray-900">Settings</h1>
          <p class="mt-1 text-sm text-gray-500">Manage your account preferences and notifications.</p>
        </div>
      </div>
    </div>

    <!-- Email Notifications Card -->
    <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
      <div class="flex items-center gap-3 p-6 border-b border-gray-100">
        <div class="w-8 h-8 bg-indigo-50 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
        </div>
        <div>
          <h2 class="text-base font-semibold text-gray-900">Email Notifications</h2>
          <p class="text-sm text-gray-500">Configure how often you receive email reports.</p>
        </div>
      </div>

      <div class="p-6">
        <%= form_with url: update_email_notification_period_path, method: :patch, local: true do |form| %>
          <div class="space-y-8 max-w-md">
            <div>
              <label for="email_notification" class="block text-xs font-medium text-gray-500 mb-1.5">Email Notifications</label>
              <%= form.select :email_notification, 
                  options_for_select([['Active', true], ['Deactivated', false]], current_user.email_notification), 
                  {}, 
                  { class: "w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 focus:border-gray-400 focus:ring-0 focus:outline-none" } %>
              <p class="mt-2 text-sm text-gray-500">Receive email reports and notifications.</p>
            </div>

            <div>
              <label for="email_notification_period" class="block text-xs font-medium text-gray-500 mb-1.5">Email Notification Period</label>
              <%= form.select :email_notification_period, 
                  options_for_select([['Weekly', 'weekly'], ['Monthly', 'monthly'], ['Weekly and Monthly (Both)', 'weekly_and_monthly']], current_user.email_notification_period), 
                  {}, 
                  { class: "w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 focus:border-gray-400 focus:ring-0 focus:outline-none" } %>
              <p class="mt-2 text-sm text-gray-500">Choose how frequently you want to receive email reports.</p>
            </div>

            <div>
              <label for="email_notification_time" class="block text-xs font-medium text-gray-500 mb-1.5">Email Notification Time</label>
              <%= form.select :email_notification_time, 
                  options_for_select([['Morning', 'morning'], ['Afternoon', 'afternoon']], current_user.email_notification_time), 
                  {}, 
                  { class: "w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 focus:border-gray-400 focus:ring-0 focus:outline-none" } %>
              <p class="mt-2 text-sm text-gray-500">Choose when you want to receive your email reports.</p>
            </div>
          </div>

          <div class="mt-6 flex justify-end">
            <%= form.submit "Update Settings", class: "h-10 px-4 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

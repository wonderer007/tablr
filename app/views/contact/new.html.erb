<!-- Contact/Pre-registration Page -->
<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Join Tablr</h1>
      <p class="mt-2 text-sm text-gray-600">
        Get insights from your restaurant reviews
      </p>
    </div>

    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with url: contact_index_path, method: :post, local: true, class: "space-y-6", autocomplete: "off" do |form| %>
        
        <div>
          <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, required: true, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "John Doe" %>
          </div>
        </div>

        <div>
          <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, required: true, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "john@restaurant.com" %>
          </div>
        </div>

        <div>
          <%= form.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.telephone_field :phone_number, required: true, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "+1 (555) 123-4567" %>
          </div>
        </div>

        <div>
          <%= form.label :restaurant_name, "Restaurant Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :restaurant_name, required: true, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Your Restaurant Name" %>
          </div>
        </div>

        <div>
          <%= form.label :google_maps_link, "Google Maps Link", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.url_field :google_maps_link, required: true, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "https://maps.google.com/..." %>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            Please provide the Google Maps link to your restaurant location
          </p>
        </div>

        <div>
          <%= form.label :message, "Additional Information (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :message, rows: 3, autocomplete: "off", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Tell us about your restaurant or any specific needs..." %>
          </div>
        </div>

        <div>
          <%= form.submit "Request Access", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="mt-6">
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Already have an account?</span>
          </div>

          <%= link_to "Sign In", new_user_session_path, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Dashboard View - Complaints & Suggestions Analytics with Date Range Filtering %>

<% content_for :title, "Dashboard - Tablr" %>

<!-- Dashboard Content -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="space-y-8">
      <!-- Page Header with Date Range Picker -->
      <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl sm:text-3xl font-semibold text-gray-900" id="dashboard-title">
              Dashboard
            </h1>
            <div class="relative group">
              <svg class="h-5 w-5 text-gray-400 hover:text-gray-600 cursor-help" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
              </svg>
              <!-- Tooltip -->
              <div class="invisible group-hover:visible absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 text-sm text-white bg-gray-900 rounded-lg shadow-lg whitespace-nowrap z-10">
                Showing data from <strong><%= @start_date.strftime('%B %d, %Y') %></strong> to 
                <strong><%= @end_date.strftime('%B %d, %Y') %></strong> 
                (<%= @duration_days %> days). Changes compared to previous <%= @duration_days %> days.
                <!-- Tooltip arrow -->
                <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-l-transparent border-r-transparent border-t-gray-900"></div>
              </div>
            </div>
          </div>
          <p class="mt-2 text-sm text-gray-700">Monitor customer complaints and suggestions over time.</p>
        </div>
        
        <!-- Date Range Filter -->
        <div class="mt-4 flex md:ml-4 md:mt-0">
          <%= form_with url: dashboard_path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
            <div data-controller="date-range" 
                 data-date-range-start-date-value="<%= @start_date.strftime('%Y-%m-%d') %>"
                 data-date-range-end-date-value="<%= @end_date.strftime('%Y-%m-%d') %>"
                 class="relative">
              
              <input type="text" 
                     data-date-range-target="input"
                     placeholder="Select date range"
                     class="block w-72 h-11 rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                     readonly>
              
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25m-10.5 0V3h7.5v2.25m-7.5 0h7.5m-7.5 0v17.25M17.25 5.25v2.25M6.75 5.25h10.5v14.25H6.75V5.25z" />
                </svg>
              </div>
              
              <%= form.hidden_field :start_date, data: { "date-range-target": "startDate" } %>
              <%= form.hidden_field :end_date, data: { "date-range-target": "endDate" } %>
            </div>
            
            <%= form.submit "Filter", class: "inline-flex h-11 items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>

            <a href="<%= dashboard_path %>" 
               data-action="click->date-range#clear"
               class="inline-flex items-center h-11 rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">
              Clear
            </a>
          <% end %>
        </div>
      </div>

      <!-- Overview Stats -->
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Total Complaints Card -->
        <div class="relative group">
          <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-8 border border-red-200 hover:shadow-xl transition-all duration-200 hover:scale-[1.02]">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center space-x-4">
                <div class="p-3 bg-gradient-to-br from-red-500 to-red-600 rounded-xl shadow-lg">
                  <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-semibold text-red-900">Total Complaints</h4>
                  <p class="text-sm text-red-600">Last <%= @duration_days %> days</p>
                </div>
              </div>
              <% if @complaint_change[:value] != 0 %>
                <div class="flex items-center space-x-1 px-3 py-1.5 rounded-full <%= @complaint_change[:positive] ? 'bg-red-200 text-red-800' : 'bg-green-100 text-green-800' %>">
                  <% if @complaint_change[:positive] %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 3a.75.75 0 01.75.75v10.638l3.96-4.158a.75.75 0 111.08 1.04l-5.25 5.5a.75.75 0 01-1.08 0l-5.25-5.5a.75.75 0 111.08-1.04l-3.96 4.158V3.75A.75.75 0 0110 3z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <span class="text-sm font-semibold"><%= @complaint_change[:value].abs %>%</span>
                </div>
              <% end %>
            </div>
            <div class="flex items-baseline space-x-3">
              <span class="text-5xl font-bold text-red-900"><%= number_with_delimiter(@current_complaints_count) %></span>
              <span class="text-lg text-red-600">complaints</span>
            </div>
            <div class="mt-6">
              <a href="<%= complains_path %>" class="inline-flex items-center text-sm font-medium text-red-600 hover:text-red-800 transition-colors">
                View all complaints
                <svg class="ml-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Total Suggestions Card -->
        <div class="relative group">
          <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-2xl p-8 border border-amber-200 hover:shadow-xl transition-all duration-200 hover:scale-[1.02]">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center space-x-4">
                <div class="p-3 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl shadow-lg">
                  <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-semibold text-amber-900">Total Suggestions</h4>
                  <p class="text-sm text-amber-600">Last <%= @duration_days %> days</p>
                </div>
              </div>
              <% if @suggestion_change[:value] != 0 %>
                <div class="flex items-center space-x-1 px-3 py-1.5 rounded-full <%= @suggestion_change[:positive] ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <% if @suggestion_change[:positive] %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 3a.75.75 0 01.75.75v10.638l3.96-4.158a.75.75 0 111.08 1.04l-5.25 5.5a.75.75 0 01-1.08 0l-5.25-5.5a.75.75 0 111.08-1.04l-3.96 4.158V3.75A.75.75 0 0110 3z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <span class="text-sm font-semibold"><%= @suggestion_change[:value].abs %>%</span>
                </div>
              <% end %>
            </div>
            <div class="flex items-baseline space-x-3">
              <span class="text-5xl font-bold text-amber-900"><%= number_with_delimiter(@current_suggestions_count) %></span>
              <span class="text-lg text-amber-600">suggestions</span>
            </div>
            <div class="mt-6">
              <a href="<%= suggestions_path %>" class="inline-flex items-center text-sm font-medium text-amber-600 hover:text-amber-800 transition-colors">
                View all suggestions
                <svg class="ml-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Categories Breakdown -->
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Top Complaint Categories -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
          <div class="mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Top Complaint Categories</h3>
            <p class="text-gray-600">Most common issues from customer feedback</p>
          </div>
          
          <% if @top_complaint_categories.any? %>
            <div class="space-y-4">
              <% max_count = @top_complaint_categories.values.max %>
              <% @top_complaint_categories.each do |category_name, count| %>
                <div class="group">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700 group-hover:text-gray-900 transition-colors"><%= category_name %></span>
                    <span class="text-sm font-semibold text-red-600"><%= count %></span>
                  </div>
                  <div class="w-full bg-red-100 rounded-full h-2.5">
                    <div class="bg-gradient-to-r from-red-400 to-red-600 h-2.5 rounded-full transition-all duration-500" style="width: <%= (count.to_f / max_count * 100).round %>%"></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
              </svg>
              <p class="mt-4 text-gray-500">No complaints in this period</p>
            </div>
          <% end %>
        </div>

        <!-- Top Suggestion Categories -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
          <div class="mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Top Suggestion Categories</h3>
            <p class="text-gray-600">Most requested improvements from customers</p>
          </div>
          
          <% if @top_suggestion_categories.any? %>
            <div class="space-y-4">
              <% max_count = @top_suggestion_categories.values.max %>
              <% @top_suggestion_categories.each do |category_name, count| %>
                <div class="group">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700 group-hover:text-gray-900 transition-colors"><%= category_name %></span>
                    <span class="text-sm font-semibold text-amber-600"><%= count %></span>
                  </div>
                  <div class="w-full bg-amber-100 rounded-full h-2.5">
                    <div class="bg-gradient-to-r from-amber-400 to-amber-600 h-2.5 rounded-full transition-all duration-500" style="width: <%= (count.to_f / max_count * 100).round %>%"></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
              </svg>
              <p class="mt-4 text-gray-500">No suggestions in this period</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

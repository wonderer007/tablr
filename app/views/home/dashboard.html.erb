<%# Dashboard View - Clean & Minimalist Analytics %>

<% content_for :title, "Dashboard - Tablr" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
          <p class="mt-1 text-sm text-gray-500">
            <% if @date_filter_active %>
              Showing data from <%= @start_date.strftime('%b %d, %Y') %> to <%= @end_date.strftime('%b %d, %Y') %>
            <% else %>
              Showing all time data
            <% end %>
          </p>
        </div>
        
        <!-- Date Filter -->
        <%= form_with url: dashboard_path, method: :get, local: true, class: "flex flex-wrap items-center gap-2" do |form| %>
          <div data-controller="date-range" 
               data-date-range-start-date-value="<%= @start_date&.strftime('%Y-%m-%d') || '' %>"
               data-date-range-end-date-value="<%= @end_date&.strftime('%Y-%m-%d') || '' %>"
               class="relative">
            
            <input type="text" 
                   data-date-range-target="input"
                   placeholder="Filter by date range"
                   class="w-56 h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 placeholder:text-gray-400 focus:border-gray-400 focus:ring-0 focus:outline-none"
                   readonly>
            
            <%= form.hidden_field :start_date, data: { "date-range-target": "startDate" } %>
            <%= form.hidden_field :end_date, data: { "date-range-target": "endDate" } %>
          </div>
          
          <%= form.submit "Apply", class: "h-10 px-4 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors cursor-pointer" %>
          
          <% if @date_filter_active %>
            <a href="<%= dashboard_path %>" class="h-10 px-4 text-sm font-medium text-gray-600 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors inline-flex items-center">
              Clear
            </a>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Reviews Analyzed Card -->
    <div class="mb-6">
      <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-sm transition-shadow">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-indigo-50 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-500">Reviews Analyzed</p>
            <p class="text-3xl font-semibold text-indigo-500 mt-1"><%= number_with_delimiter(@total_reviews_count) %></p>
          </div>
          <a href="<%= reviews_path %>" class="flex-shrink-0 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>          
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">

      <!-- Total Complaints -->
      <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-sm transition-shadow">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-red-50 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-500">Complaints</p>
            <p class="text-3xl font-semibold text-red-500 mt-1"><%= number_with_delimiter(@total_complaints_count) %></p>
          </div>
          <a href="<%= complains_path %>" class="flex-shrink-0 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Total Suggestions -->
      <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-sm transition-shadow">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-amber-50 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-amber-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-500">Suggestions</p>
            <p class="text-3xl font-semibold text-amber-500 mt-1"><%= number_with_delimiter(@total_suggestions_count) %></p>
          </div>
          <a href="<%= suggestions_path %>" class="flex-shrink-0 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Category Breakdowns -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Top Complaint Categories -->
      <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
        <div class="flex items-center gap-3 p-6 border-b border-gray-100">
          <div class="w-8 h-8 bg-red-50 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
          </div>
          <h2 class="text-base font-semibold text-gray-900">Top Complaint Categories</h2>
        </div>
        
        <% if @top_complaint_categories.any? %>
          <table class="w-full">
            <thead>
              <tr class="bg-gray-50">
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @top_complaint_categories.each_with_index do |(category_name, count), index| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="w-6 h-6 bg-red-50 rounded-lg flex items-center justify-center text-xs font-medium text-red-600">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm text-gray-900"><%= category_name.capitalize %></span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-lg border-2 border-red-300 text-red-700 bg-red-50">
                      <%= count %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center py-10">
            <div class="w-12 h-12 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
              </svg>
            </div>
            <p class="text-sm text-gray-400">No complaints found</p>
          </div>
        <% end %>
      </div>

      <!-- Top Suggestion Categories -->
      <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
        <div class="flex items-center gap-3 p-6 border-b border-gray-100">
          <div class="w-8 h-8 bg-amber-50 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-amber-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
          </div>
          <h2 class="text-base font-semibold text-gray-900">Top Suggestion Categories</h2>
        </div>
        
        <% if @top_suggestion_categories.any? %>
          <table class="w-full">
            <thead>
              <tr class="bg-gray-50">
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @top_suggestion_categories.each_with_index do |(category_name, count), index| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="w-6 h-6 bg-amber-50 rounded-lg flex items-center justify-center text-xs font-medium text-amber-600">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span class="text-sm text-gray-900"><%= category_name.capitalize %></span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-lg border-2 border-amber-300 text-amber-700 bg-amber-50">
                      <%= count %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center py-10">
            <div class="w-12 h-12 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
              </svg>
            </div>
            <p class="text-sm text-gray-400">No suggestions found</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

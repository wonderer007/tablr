<!-- Sign Up Page -->
<div class="min-h-screen py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900">Create Your <%= link_to "Tablr", root_path, class: "text-indigo-600 hover:text-indigo-500 transition duration-200 font-medium" %> Account</h1>
      <p class="mt-4 text-sm text-gray-600">
        Join <%= link_to "Tablr", root_path, class: "text-indigo-600 hover:text-indigo-500 transition duration-200 font-medium" %> to transform your restaurant reviews into actionable insights
      </p>
    </div>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg relative mb-6" role="alert" data-controller="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg relative mb-6" role="alert" data-controller="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <div class="bg-white py-10 px-6 shadow-lg sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-8", autocomplete: "off") do |f| %>
        <div class="mb-6">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="space-y-6">
          <div>
            <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, required: true, autofocus: true, autocomplete: "off", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "John" %>
          </div>

          <div>
            <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, required: true, autocomplete: "off", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "Doe" %>
          </div>

          <div>
            <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, required: true, autocomplete: "off", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "john@restaurant.com" %>
          </div>

          <div>
            <%= f.label :google_maps_url, "Google Maps URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.url_field :google_maps_url, required: true, autocomplete: "off", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "https://maps.google.com/..." %>
            <p class="mt-2 text-xs text-gray-500">
              Please provide the Google Maps URL to your restaurant location
            </p>
          </div>

          <!-- Password Section with extra spacing -->
          <div class="pt-4 border-t border-gray-100">
            <div class="space-y-6">
              <div>
                <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password, required: true, autocomplete: "new-password", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200" %>
              </div>

              <div>
                <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms and Conditions Section -->
        <div class="pt-6 border-t border-gray-100">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input id="terms_accepted" name="terms_accepted" type="checkbox" required class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
            </div>
            <div class="ml-3 text-sm">
              <label for="terms_accepted" class="text-gray-700">
                I agree to the 
                <button type="button" onclick="openTermsModal()" class="text-indigo-600 hover:text-indigo-500 underline font-medium">
                  Terms and Conditions
                </button>
              </label>
            </div>
          </div>
        </div>

        <div class="pt-8">
          <%= f.submit "Create Account", id: "create-account-btn", class: "w-full flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-8">
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">Already have an account?</span>
        </div>

        <%= link_to "Sign In", new_user_session_path, class: "w-full flex justify-center py-3 px-6 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out mt-4" %>
      </div>
    </div>
  </div>
</div>

<!-- Include Terms and Conditions Modal -->
<%= render 'shared/terms_and_conditions_modal' %>

<script>
  function openTermsModal() {
    if (window.termsModalController) {
      window.termsModalController.open()
    } else {
      // Fallback if controller not ready
      const modal = document.querySelector('[data-modal-target="modal"]')
      if (modal) {
        modal.classList.remove('hidden')
        document.body.style.overflow = 'hidden'
      }
    }
  }

  function closeTermsModal() {
    if (window.termsModalController) {
      window.termsModalController.close()
    } else {
      // Fallback if controller not ready
      const modal = document.querySelector('[data-modal-target="modal"]')
      if (modal) {
        modal.classList.add('hidden')
        document.body.style.overflow = ''
      }
    }
  }

  function acceptTermsAndClose() {
    // Check the checkbox
    const checkbox = document.getElementById('terms_accepted')
    if (checkbox) {
      checkbox.checked = true
      
      // Remove any error styling
      checkbox.classList.remove('border-red-300', 'focus:ring-red-500')
      
      // Remove error message if it exists
      const errorMessage = document.getElementById('terms-error-message')
      if (errorMessage) {
        errorMessage.remove()
      }
    }
    
    // Close the modal
    closeTermsModal()
  }

  // Form validation
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form')
    if (form) {
      form.addEventListener('submit', function(event) {
        const checkbox = document.getElementById('terms_accepted')
        
        if (!checkbox || !checkbox.checked) {
          event.preventDefault()
          showValidationError('You must accept the Terms and Conditions to create an account.')
          return false
        }
      })
    }
  })

  function showValidationError(message) {
    // Remove any existing error messages
    const existingError = document.getElementById('terms-error-message')
    if (existingError) {
      existingError.remove()
    }

    // Create and insert error message
    const checkbox = document.getElementById('terms_accepted')
    if (checkbox) {
      const errorDiv = document.createElement('div')
      errorDiv.id = 'terms-error-message'
      errorDiv.className = 'mt-2 text-sm text-red-600'
      errorDiv.textContent = message
      
      // Insert after the checkbox container
      const checkboxContainer = checkbox.closest('.flex.items-start')
      if (checkboxContainer) {
        checkboxContainer.parentNode.insertBefore(errorDiv, checkboxContainer.nextSibling)
      }

      // Add red border to checkbox
      checkbox.classList.add('border-red-300', 'focus:ring-red-500')
      
      // Remove error styling when checkbox is checked
      checkbox.addEventListener('change', function() {
        if (checkbox.checked) {
          errorDiv.remove()
          checkbox.classList.remove('border-red-300', 'focus:ring-red-500')
        }
      }, { once: true })
    }
  }

  // Handle escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const modal = document.querySelector('[data-modal-target="modal"]')
      if (modal && !modal.classList.contains('hidden')) {
        closeTermsModal()
      }
    }
  })
</script>
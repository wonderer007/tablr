<% content_for :title, "Complaints - Tablr" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-gray-900">Complaints</h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= pluralize(@complains.total_count, 'complaint') %> extracted from reviews
          </p>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <%= search_form_for @q, url: complains_path, method: :get, class: "mb-6" do |f| %>
      <div class="bg-white rounded-xl border border-gray-100 p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 items-end">
          <!-- Keyword Search -->
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1.5">Search</label>
            <%= f.search_field :text_cont, 
                  placeholder: "Search complaints...", 
                  autocomplete: "off",
                  class: "w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 placeholder:text-gray-400 focus:border-gray-400 focus:ring-0 focus:outline-none" %>
          </div>

          <!-- Category Filter -->
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1.5">Category</label>
            <%= f.select :category_id_eq, 
                options_from_collection_for_select(Category.order(:name), :id, :name, params.dig(:q, :category_id_eq)), 
                { include_blank: "All Categories" }, 
                class: "w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 focus:border-gray-400 focus:ring-0 focus:outline-none" %>
          </div>

          <!-- Date Range -->
          <div data-controller="date-range" 
               data-date-range-start-date-value="<%= params.dig(:q, :review_published_at_gteq) %>"
               data-date-range-end-date-value="<%= params.dig(:q, :review_published_at_lteq) %>">
            <label class="block text-xs font-medium text-gray-500 mb-1.5">Published Date</label>
            <input type="text" 
                   data-date-range-target="input"
                   placeholder="Select date range"
                   class="w-full h-10 rounded-lg border border-gray-200 bg-white px-3 text-sm text-gray-700 placeholder:text-gray-400 focus:border-gray-400 focus:ring-0 focus:outline-none"
                   readonly>
            <%= f.hidden_field :review_published_at_gteq, data: { "date-range-target": "startDate" } %>
            <%= f.hidden_field :review_published_at_lteq, data: { "date-range-target": "endDate" } %>
          </div>

          <!-- Filter Actions -->
          <div class="flex items-center gap-2">
            <%= f.submit "Apply", class: "h-10 px-4 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors cursor-pointer" %>
            <% if params[:q].present? && params[:q].values.any?(&:present?) %>
              <%= link_to complains_path, class: "h-10 px-4 text-sm font-medium text-gray-600 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors inline-flex items-center" do %>
                Clear
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Complaints List -->
    <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
      <% if @complains.any? %>
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-100">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Complaint</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Published</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @complains.each do |complain| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <img class="w-9 h-9 flex-shrink-0 rounded-full bg-gray-100"
                         src="<%= profile_image_url(complain.review.image_url) %>"
                         alt="<%= complain.review.name %>"
                         width="36"
                         height="36"
                         loading="lazy"
                         onerror="this.onerror=null;this.src='/images/default-profile.png';" />
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= complain.review.name %></p>
                      <p class="text-sm text-gray-500 truncate max-w-md" title="<%= complain.text %>">
                        <%= truncate(complain.text, length: 80, separator: ' ') %>
                      </p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-lg border-2 border-red-300 text-red-700 bg-red-50">
                    <%= complain.category.name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= complain.review.published_at&.strftime('%b %d, %Y') || 'â€”' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <!-- TODO: add external url link icon here -->
                <%= link_to complain.review.review_url, target: "_blank", rel: "noopener noreferrer" do %>
                  <svg class="size-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <!-- Pagination -->
        <div class="border-t border-gray-100 px-6 py-4">
          <div class="flex items-center justify-between">
            <p class="text-sm text-gray-500">
              Showing <span class="font-medium text-gray-700"><%= @complains.offset_value + 1 %></span> 
              to <span class="font-medium text-gray-700"><%= [@complains.offset_value + @complains.limit_value, @complains.total_count].min %></span> 
              of <span class="font-medium text-gray-700"><%= @complains.total_count %></span> results
            </p>
            <div class="flex items-center gap-2">
              <%== paginate @complains %>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
          </div>
          <h3 class="text-base font-medium text-gray-900 mb-1">No complaints found</h3>
          <p class="text-sm text-gray-500 mb-4 max-w-sm mx-auto">
            <% if params[:q].present? && params[:q].values.any?(&:present?) %>
              No complaints match your filters. Try adjusting your search criteria.
            <% else %>
              Complaints extracted from reviews will appear here once reviews are processed.
            <% end %>
          </p>
          <% if params[:q].present? && params[:q].values.any?(&:present?) %>
            <%= link_to "Clear Filters", complains_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

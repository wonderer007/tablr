<!-- Forgot Password Page -->
<div class="min-h-screen relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 mesh-gradient"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-400/20 rounded-full blur-3xl animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-violet-400/20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-slate-200/50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-center h-16">
        <!-- Logo -->
            <div class="flex items-center gap-3">
                <a href="/" class="flex h-9 w-9 items-center justify-center rounded-lg bg-indigo-600 hover:bg-indigo-700 transition-all duration-300">
                  <span class="text-lg font-bold text-white">T</span>
                </a>
                <span class="text-lg font-semibold text-slate-900">Tablr.io</span>
            </div>


        <!-- CTA Button - Right -->
        <div class="flex items-center gap-3 flex-shrink-0 ml-auto">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-full hover:shadow-lg hover:shadow-indigo-500/25 transition-all duration-300" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "hidden sm:block px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
            <%= link_to "Get Started", new_user_registration_path, class: "px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-full hover:shadow-lg hover:shadow-indigo-500/25 transition-all duration-300" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
  
  <div class="relative z-10 grid lg:grid-cols-2 min-h-screen pt-16">
    <!-- Left Side - Branding -->
    <div class="hidden lg:flex items-center justify-end pr-16 xl:pr-24">
      <div class="w-full max-w-md space-y-8">
        <div class="space-y-4">
          <h1 class="font-display text-4xl font-bold text-slate-900 leading-tight">
            Forgot Your
            <span class="gradient-text">Password?</span>
          </h1>
          <p class="text-lg text-slate-600 leading-relaxed">
            No worries! It happens to the best of us. Enter your email and we'll send you instructions to reset your password.
          </p>
        </div>
        
        <!-- Security info -->
        <div class="space-y-4 pt-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">Check your inbox for reset link</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">Secure password reset process</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-violet-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="text-slate-700 font-medium">Link expires in 6 hours</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Right Side - Form -->
    <div class="flex items-center justify-center lg:justify-start lg:pl-16 xl:pl-24 p-6 lg:py-12">
      <div class="w-full max-w-md">
        <!-- Mobile Logo -->
        <div class="lg:hidden flex items-center justify-center gap-2 mb-8">
          <%= link_to root_path, class: "font-display font-bold text-2xl text-slate-900" do %>
            Tablr
          <% end %>
        </div>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
            <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm"><%= notice %></span>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="bg-rose-50 border border-rose-200 text-rose-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
            <svg class="w-5 h-5 text-rose-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm"><%= alert %></span>
          </div>
        <% end %>

        <div class="glass-card rounded-2xl p-8 shadow-xl shadow-slate-900/5 border border-white/50">
          <div class="text-center mb-8">
            <div class="w-14 h-14 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
            </div>
            <h2 class="font-display text-2xl font-bold text-slate-900 mb-2">Reset your password</h2>
            <p class="text-slate-600 text-sm">Enter your email and we'll send you a reset link</p>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
            <% if resource.errors.any? %>
              <div class="bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 rounded-xl text-sm">
                <ul class="list-disc list-inside space-y-1">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= f.label :email, "Email address", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "Enter your email address" %>
            </div>

            <div class="pt-2">
              <%= f.submit "Send reset instructions", class: "w-full py-3.5 px-6 text-white font-semibold bg-gradient-to-r from-indigo-600 to-violet-500 rounded-xl hover:shadow-lg hover:shadow-indigo-500/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 cursor-pointer" %>
            </div>
          <% end %>

          <p class="mt-6 text-center text-sm text-slate-600">
            Remember your password?
            <%= link_to "Back to sign in", new_session_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500 transition-colors" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

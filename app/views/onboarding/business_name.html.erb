<% content_for(:title, "Set Up Your Business - Tablr") %>

<div class="min-h-screen relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 mesh-gradient"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-400/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-violet-400/20 rounded-full blur-3xl"></div>

  <div class="relative min-h-screen flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto w-full">
      <!-- Progress indicator -->
      <div class="mb-12">
        <div class="flex items-center justify-center gap-2 sm:gap-4 mb-4">
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white flex items-center justify-center font-semibold text-xs sm:text-sm shadow-lg shadow-indigo-500/30">1</div>
            <span class="text-xs sm:text-sm font-medium text-slate-700 hidden sm:block">Business</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-slate-200 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-slate-200 text-slate-400 flex items-center justify-center font-semibold text-xs sm:text-sm">2</div>
            <span class="text-xs sm:text-sm font-medium text-slate-400 hidden sm:block">Platform</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-slate-200 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-slate-200 text-slate-400 flex items-center justify-center font-semibold text-xs sm:text-sm">3</div>
            <span class="text-xs sm:text-sm font-medium text-slate-400 hidden sm:block">Connect</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-slate-200 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-slate-200 text-slate-400 flex items-center justify-center font-semibold text-xs sm:text-sm">4</div>
            <span class="text-xs sm:text-sm font-medium text-slate-400 hidden sm:block">Plan</span>
          </div>
        </div>
      </div>

      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="font-display text-3xl sm:text-4xl font-bold text-slate-900 tracking-tight mb-3">
          Welcome to Tablr!
        </h1>
        <p class="text-slate-600 text-lg">What's your business called?</p>
      </div>

      <!-- Form Card -->
      <div class="bg-white rounded-2xl shadow-xl shadow-slate-900/5 border border-slate-100 p-8">
        <%= form_with model: @business, url: onboarding_business_name_path, method: :patch, class: "space-y-6" do |f| %>
          <% if @business.errors.any? %>
            <div class="bg-red-50 border border-red-100 text-red-600 px-4 py-3 rounded-xl text-sm">
              <% @business.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Business Name", class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= f.text_field :name,
                required: true,
                autofocus: true,
                class: "block w-full px-4 py-3 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-200",
                placeholder: "e.g., Joe's Coffee Shop" %>
          </div>

          <div>
            <%= f.submit "Continue",
                class: "w-full flex justify-center items-center gap-2 py-3 px-6 text-base font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-xl hover:shadow-lg hover:shadow-indigo-500/25 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
      <p class="text-center text-sm text-slate-500 mt-8">
        This helps us personalize your experience and reports.
      </p>
    </div>
  </div>
</div>

<!-- Login Page -->
<div class="min-h-screen py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900">
        Sign In to <%= link_to "Tablr", root_path, class: "text-indigo-600 hover:text-indigo-500 transition duration-200" %>
      </h1>
      <p class="mt-4 text-sm text-gray-600">
        Access your review analytics dashboard
      </p>
    </div>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg relative mb-6" role="alert" data-controller="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg relative mb-6" role="alert" data-controller="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <div class="bg-white py-10 px-6 shadow-lg sm:rounded-lg sm:px-12">
      <!-- Google Sign In Button -->
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 py-3 px-6 border border-gray-300 rounded-md shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out" do %>
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Continue with Google</span>
      <% end %>

      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">Or sign in with email</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "space-y-8" }) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "off", required: true, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "Enter your email" %>
          </div>

          <div>
            <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password, autocomplete: "off", required: true, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200", placeholder: "Enter your password" %>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="mt-3 text-right">
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition duration-200 ease-in-out" %>
              </div>
            <% end %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center pt-2">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "Remember me", class: "ml-3 block text-sm text-gray-900" %>
            </div>
          <% end %>
        </div>

        <div class="pt-6">
          <%= f.submit "Sign In", class: "w-full flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-8">
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">Don't have an account?</span>
        </div>

        <%= link_to "Create Account", new_user_registration_path, class: "w-full flex justify-center py-3 px-6 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out mt-4" %>
      </div>
    </div>
  </div>
</div>

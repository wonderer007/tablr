<% content_for(:title, "Choose Your Plan - Tablr") %>

<div class="min-h-screen relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 mesh-gradient"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-400/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-violet-400/20 rounded-full blur-3xl"></div>

  <div class="relative min-h-screen flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto w-full">
      <!-- Progress indicator -->
      <div class="mb-12">
        <div class="flex items-center justify-center gap-2 sm:gap-4 mb-4">
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white flex items-center justify-center font-semibold text-xs sm:text-sm shadow-lg shadow-indigo-500/30">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-xs sm:text-sm font-medium text-slate-700 hidden sm:block">Business</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-indigo-500 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white flex items-center justify-center font-semibold text-xs sm:text-sm shadow-lg shadow-indigo-500/30">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-xs sm:text-sm font-medium text-slate-700 hidden sm:block">Platform</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-indigo-500 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white flex items-center justify-center font-semibold text-xs sm:text-sm shadow-lg shadow-indigo-500/30">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-xs sm:text-sm font-medium text-slate-700 hidden sm:block">Connect</span>
          </div>
          <div class="w-6 sm:w-12 h-0.5 bg-indigo-500 rounded-full"></div>
          <div class="flex items-center gap-1 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white flex items-center justify-center font-semibold text-xs sm:text-sm shadow-lg shadow-indigo-500/30">4</div>
            <span class="text-xs sm:text-sm font-medium text-slate-700 hidden sm:block">Plan</span>
          </div>
        </div>
      </div>

      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="font-display text-3xl sm:text-4xl font-bold text-slate-900 tracking-tight mb-3">
          Choose your plan
        </h1>
        <p class="text-slate-600 text-lg">Start free or unlock powerful features with Pro.</p>
      </div>

      <!-- Flash Messages -->
      <% if alert %>
        <div class="bg-red-50 border border-red-100 text-red-600 px-4 py-3 rounded-xl text-sm mb-6">
          <%= alert %>
        </div>
      <% end %>

      <!-- Plan Cards -->
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Free Plan -->
        <%= form_with url: onboarding_plan_path, method: :post, data: { turbo: false }, class: "contents" do %>
          <input type="hidden" name="plan" value="free">
          <button type="submit" class="group bg-white rounded-2xl border-2 border-slate-200 p-6 sm:p-8 text-left transition-all duration-300 hover:border-slate-300 hover:shadow-xl hover:shadow-slate-900/5 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-xl font-bold text-slate-900">Free</h3>
              <span class="px-3 py-1 rounded-full bg-slate-100 text-slate-600 text-sm font-medium">Basic</span>
            </div>
            
            <div class="mb-6">
              <span class="text-4xl font-bold text-slate-900">$0</span>
              <span class="text-slate-500">one-time</span>
            </div>

            <ul class="space-y-3 mb-8">
              <% @free_plan[:features].each do |feature| %>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-slate-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-slate-600 text-sm"><%= feature %></span>
                </li>
              <% end %>
            </ul>

            <div class="w-full py-3 px-6 text-base font-semibold text-slate-700 bg-slate-100 rounded-xl group-hover:bg-slate-200 transition-colors text-center">
              Start Free
            </div>
          </button>
        <% end %>

        <!-- Pro Plan -->
        <%= form_with url: onboarding_plan_path, method: :post, data: { turbo: false }, class: "contents" do %>
          <input type="hidden" name="plan" value="pro">
          <button type="submit" class="group bg-white rounded-2xl border-2 border-indigo-500 p-6 sm:p-8 text-left transition-all duration-300 hover:shadow-xl hover:shadow-indigo-500/20 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-xl font-bold text-slate-900">Pro</h3>
              <span class="px-3 py-1 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 text-white text-sm font-medium">Most Popular</span>
            </div>
            
            <div class="mb-6">
              <span class="text-4xl font-bold gradient-text">$10</span>
              <span class="text-slate-500">/month</span>
            </div>

            <ul class="space-y-3 mb-8">
              <% @pro_plan[:features].each do |feature| %>
                <li class="flex items-start gap-3">
                  <div class="w-5 h-5 rounded-full bg-gradient-to-r from-indigo-500 to-violet-500 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <span class="text-slate-700 text-sm"><%= feature %></span>
                </li>
              <% end %>
            </ul>

            <div class="w-full py-3 px-6 text-base font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-xl group-hover:shadow-lg group-hover:shadow-indigo-500/25 transition-all text-center">
              Select Pro
            </div>
          </button>
        <% end %>
      </div>

      <!-- Back link -->
      <div class="text-center mt-8">
        <%= link_to onboarding_integration_url_path, class: "inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back
        <% end %>
      </div>
    </div>
  </div>
</div>


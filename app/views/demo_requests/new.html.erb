<!-- Demo Request Page -->
<div class="min-h-screen relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 mesh-gradient"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-400/20 rounded-full blur-3xl animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-violet-400/20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-slate-200/50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-center h-16">
        <!-- Logo -->
        <div class="flex items-center gap-2.5 flex-shrink-0">
          <a href="/"> <img src="/images/file.svg" alt="Tablr" class="w-auto" style="height: 9.24rem;"></a>
        </div>

        <!-- CTA Button - Right -->
        <div class="flex items-center gap-3 flex-shrink-0 ml-auto">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-full hover:shadow-lg hover:shadow-indigo-500/25 transition-all duration-300" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "hidden sm:block px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
            <%= link_to "Get Started", new_user_registration_path, class: "px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-500 rounded-full hover:shadow-lg hover:shadow-indigo-500/25 transition-all duration-300" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <div class="relative z-10 flex items-center justify-center min-h-screen p-6 pt-24">
    <div class="w-full max-w-md">

      <!-- Flash Messages -->
      <% if notice %>
        <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
          <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm"><%= notice %></span>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-rose-50 border border-rose-200 text-rose-800 px-5 py-4 rounded-xl relative mb-6 flex items-center gap-3" role="alert" data-controller="alert">
          <svg class="w-5 h-5 text-rose-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm"><%= alert %></span>
        </div>
      <% end %>

      <div class="glass-card rounded-2xl p-8 shadow-xl shadow-slate-900/5 border border-white/50">
        <div class="text-center mb-8">
          <h1 class="font-display text-2xl font-bold text-slate-900 mb-2">Request a Tablr Demo</h1>
          <p class="text-slate-600 text-sm">See how we transform reviews into actionable insights</p>
        </div>

        <%= form_with(model: @demo_request, local: true, class: "space-y-5", autocomplete: "off") do |f| %>
          <% if @demo_request.errors.any? %>
            <div class="bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 rounded-xl text-sm mb-6">
              <ul class="list-disc list-inside space-y-1">
                <% @demo_request.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= f.label :first_name, "First name", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
              <%= f.text_field :first_name, required: true, autofocus: true, autocomplete: "off", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "John" %>
            </div>

            <div>
              <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
              <%= f.text_field :last_name, required: true, autocomplete: "off", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "Doe" %>
            </div>
          </div>

          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
            <%= f.email_field :email, required: true, autocomplete: "off", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "john@restaurant.com" %>
          </div>

          <div>
            <%= f.label :restaurant_name, "Restaurant name", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
            <%= f.text_field :restaurant_name, required: true, autocomplete: "off", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "Your Restaurant Name" %>
          </div>

          <div>
            <%= f.label :google_map_url, "Google Maps URL", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
            <%= f.url_field :google_map_url, autocomplete: "off", class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:bg-white transition-all duration-200 text-sm", placeholder: "https://maps.google.com/..." %>
          </div>

          <div class="pt-2">
            <%= f.submit "Request Demo", class: "w-full py-3.5 px-6 text-white font-semibold bg-gradient-to-r from-indigo-600 to-violet-500 rounded-xl hover:shadow-lg hover:shadow-indigo-500/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 cursor-pointer" %>
          </div>
        <% end %>

        <div class="mt-6">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-slate-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-3 bg-white text-slate-500">Already have an account?</span>
            </div>
          </div>

          <%= link_to new_user_session_path, class: "w-full inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-semibold text-slate-700 bg-white border-2 border-slate-200 rounded-xl hover:border-indigo-300 hover:bg-indigo-50/50 transition-all duration-300 mt-6" do %>
            Sign In
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="bg-white" data-controller="chart">
  <div class="px-4 py-5 sm:px-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900">Comparisons</h1>
        <div class="mt-2 flex items-center gap-x-2">
          <p class="text-sm text-gray-700">Average rating trends across different categories over time.</p>
          <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
            Rating Analytics
          </span>
        </div>
      </div>
    </div>

    <form id="date-range-form" data-chart-target="form" class="mt-6 bg-white shadow-sm rounded-lg border border-gray-200 divide-y divide-gray-200">
      <div class="px-4 py-5 sm:px-6">
        <div class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
          <div class="ml-4 mt-4">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Filter Date Range</h3>
            <p class="mt-1 text-sm text-gray-500">Select the date range for rating comparison analysis.</p>
          </div>
          <div class="ml-4 mt-4 flex-shrink-0">
            <div class="flex items-center gap-x-3">
              <button type="submit" class="rounded-md bg-indigo-600 px-3.5 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                Update Chart
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="px-4 py-5 sm:p-6">
        <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">
          <div class="sm:col-span-2">
            <label for="date_range" class="block text-sm font-medium leading-6 text-gray-900">Date Range</label>
            <div class="mt-2" data-controller="date-range" 
                 data-date-range-start-date-value="<%= params[:start_date] %>"
                 data-date-range-end-date-value="<%= params[:end_date] %>">
              <input type="text" 
                     id="date_range"
                     placeholder="Select date range..."
                     autocomplete="off"
                     data-date-range-target="input"
                     class="block w-full rounded-md border-0 px-4 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
              <input type="hidden" 
                     name="start_date" 
                     data-date-range-target="startDate"
                     data-chart-target="startDate"
                     value="<%= params[:start_date] || 12.months.ago.to_date.strftime('%Y-%m-%d') %>" />
              <input type="hidden" 
                     name="end_date" 
                     data-date-range-target="endDate"
                     data-chart-target="endDate"
                     value="<%= params[:end_date] || Date.current.strftime('%Y-%m-%d') %>" />
            </div>
          </div>
        </div>
      </div>
    </form>

    <div class="mt-6 bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-4 py-5 sm:px-6">
        <div class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
          <div class="ml-4 mt-4">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Rating Categories</h3>
            <p class="mt-1 text-sm text-gray-500">Toggle rating categories to compare on the chart.</p>
          </div>
        </div>
      </div>

      <div class="px-4 py-5 sm:p-6">
        <div class="flex flex-wrap gap-4 mb-6">
          <label class="inline-flex items-center">
            <input type="checkbox" 
                   id="toggle-star" 
                   checked 
                   data-chart-target="starToggle"
                   class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500">
            <span class="ml-2 text-sm font-medium text-gray-700">Star Rating</span>
          </label>
          <label class="inline-flex items-center">
            <input type="checkbox" 
                   id="toggle-food" 
                   checked 
                   data-chart-target="foodToggle"
                   class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500">
            <span class="ml-2 text-sm font-medium text-gray-700">Food Rating</span>
          </label>
          <label class="inline-flex items-center">
            <input type="checkbox" 
                   id="toggle-service" 
                   checked 
                   data-chart-target="serviceToggle"
                   class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500">
            <span class="ml-2 text-sm font-medium text-gray-700">Service Rating</span>
          </label>
          <label class="inline-flex items-center">
            <input type="checkbox" 
                   id="toggle-atmosphere" 
                   checked 
                   data-chart-target="atmosphereToggle"
                   class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500">
            <span class="ml-2 text-sm font-medium text-gray-700">Atmosphere Rating</span>
          </label>
        </div>
        
        <div class="mt-6">
          <canvas id="ratingsChart" data-chart-target="canvas" height="100"></canvas>
        </div>
      </div>
    </div>
  </div>
</div> 